<script>
    window.onload = function () {
        function setHeight() {
            windowHeight = $(window).innerHeight();
            //$('.section-height').css('min-height', windowHeight);
        };
        setHeight();

        $(window).resize(function () {
            setHeight();
        });
        $(function () {
            $('.nav-side-menu').on('click', 'ul>li', function () {
                if (!$(this).hasClass('active')) {
                    $('.nav-side-menu li').removeClass('active');
                    $(this).addClass('active');
                }
            })
        })
        $(function () {
            $('.sub-menu').on('click', 'li', function () {
                if (!$(this).hasClass('active')) {
                    $('.sub-menu li').removeClass('active');
                    $(this).addClass('active');
                }
            })
        })
    };
 </script>

<script>
    $(document).ready(function () {
        $("table tbody tr").each(function (i, row) {
            var $actualRow = $(row);
            if ($actualRow.find('input[type=checkbox]').prop('checked') == true)
            {
                $actualRow.css('background-color', '#f5f5f5');
            }
            else
            {
                $actualRow.css('background-color', '#fff');
            }
        });
    });
</script>

