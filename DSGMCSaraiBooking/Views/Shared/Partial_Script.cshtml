<script type="text/javascript">
   

    @*numeric Textbox only*@

    $(document).ready(function () {
        $(".digit").keypress(function (e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                $("#errormsg").html("Numeric Digits Only").show().fadeOut("slow");
                return false;
            }
        });
    });
</script>


