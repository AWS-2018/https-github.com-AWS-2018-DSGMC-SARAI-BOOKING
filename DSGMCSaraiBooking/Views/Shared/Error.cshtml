@model System.Web.Mvc.HandleErrorInfo
@{
    if (FrameWork.Core.Localizer.CurrentUser.UserType == FrameWork.Core.UserType.GURUDWARA)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2 class="text-danger">
                            Following error(s) occurred while processing your request:
                        </h2>
                        
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <h5 class="text-danger">
                            @MvcHtmlString.Create(SaraiBooking.App_Start.Common.RefineErrorMessage(@Model.Exception.Message))
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>